# InvestmentIQ MVAS - Environment Configuration
# Copy this file to .env and configure with your actual values

# Application Settings
APP_NAME=InvestmentIQ
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# API Keys (Mock values for development - replace with real keys in production)
# Financial Data API
ALPHA_VANTAGE_API_KEY=demo
FINANCIAL_DATA_API_KEY=your_financial_api_key_here

# Alternative Financial Data Providers
YAHOO_FINANCE_API_KEY=your_yahoo_finance_key_here
FINNHUB_API_KEY=your_finnhub_key_here

# News & Sentiment Data
NEWS_API_KEY=your_news_api_key_here
SENTIMENT_API_KEY=your_sentiment_api_key_here

# Database Configuration (for future use)
DATABASE_URL=sqlite:///./investment_iq.db
REDIS_URL=redis://localhost:6379/0

# LLM API Keys (for enhanced context analysis - optional)
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here

# Vector Database (for future context storage)
PINECONE_API_KEY=your_pinecone_key_here
PINECONE_ENVIRONMENT=your_environment_here

# Data Source Configuration
USE_MOCK_DATA=true
MOCK_DATA_DIR=./data/mock

# Analysis Configuration
DEFAULT_CONFIDENCE_THRESHOLD=0.7
DEFAULT_ANALYSIS_DEPTH=comprehensive

# Logging Configuration
LOG_FILE_PATH=./logs/
LOG_ROTATION=daily
LOG_RETENTION_DAYS=30

# Security
SECRET_KEY=change_this_to_a_random_secret_key_in_production
ALLOWED_HOSTS=localhost,127.0.0.1

# Performance
MAX_CONCURRENT_ANALYSES=10
CACHE_TTL_SECONDS=3600
